<RelativeLayout  	
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#777">
    <EditText
        android:id="@+id/editHostName"
        android:layout_width="160dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:paddingLeft="5dp"
        android:hint="Enter hostname or IP"
        android:inputType="textUri" 
        android:textSize="14dp"
        android:textColor="#000"
        android:background="#AAA"
        />
       <EditText
        android:id="@+id/editStartPort"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:textColor="#000"
        android:paddingLeft="5dp"
        android:hint="0"
        android:inputType="number"
        android:maxLength="5"
        android:background="#AAA"
        android:layout_toRightOf="@+id/editHostName"
         />

    <EditText
        android:id="@+id/editEndPort"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="#AAA"
        android:ems="10"
        android:hint="0"
        android:inputType="number"
        android:maxLength="5"
        android:paddingLeft="5dp"
        android:textSize="14dp"
        android:textColor="#000"
        android:layout_toRightOf="@+id/editStartPort"
        />
 <TextView
        android:id="@+id/textView15"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:text="@string/hello_world3"
        android:typeface="monospace"
        android:textColor="#000"
        android:textSize="12dp"
        android:layout_span="2"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_below="@id/editHostName"
        />
    
    <ImageView
        android:id="@+id/PortScan_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:onClick="onClick"
        android:src="@drawable/button2"
     	android:layout_below="@id/editEndPort"
     	android:layout_toRightOf="@id/textView15"
     	android:background="@drawable/bgrnd"
     	android:layout_alignParentRight="true"
     	android:scaleType="matrix"
        />    
    
  
</RelativeLayout> 